<?xml version="1.0" encoding="utf-8"?>
<xs:schema
        xmlns:xs="http://www.w3.org/2001/XMLSchema"
        xmlns:entityNamespace="entityNamespace"
        elementFormDefault="qualified"
        targetNamespace="authorNamespace">

    <xs:import namespace="entityNamespace" schemaLocation="entity.xsd"/>

    <xs:complexType name="authorType">
        <xs:complexContent>
            <xs:extension base="entityNamespace:idExtension">
                <xs:sequence>
                    <xs:element name="full_name" type="xs:string"/>
                    <xs:element name="years_of_life" type="xs:string"/>
                </xs:sequence>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>
</xs:schema>